{
case 18:
    cout<<"You are of 18"<<endl;
    break;
case 22:
    cout<<"You are of 22"<<endl;
    break;
default:
    cout<<"no special cases"<<endl;
    break;
}
    cout<<"Done with switch cases"<<endl;


