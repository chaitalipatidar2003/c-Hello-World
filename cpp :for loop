//**********************************************************************REVERSE OF NUMBER STORED IN VARIABLE
#include<iostream>
using namespace std;

int main()
{
	int i,r,n;
	int x=0 ;
	cout<<"Enter a number ";
	cin>>n;

	for(i=1;n>0;i++)
	{

		r=n%10;
		n=n/10;
	 x=x*10+r;

	}
	cout<<"The reverse of number is : "<<x;

return 0 ;
}

