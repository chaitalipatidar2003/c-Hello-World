#include<iostream>
using namespace std;

int main(){
    // Array example*******************************
    int marks[] = {23,44,46,67};
    int mathmarks[4];
    mathmarks[0]=3456;
    mathmarks[1]=356;
    mathmarks[2]=856;
    mathmarks[3]=586;
cout<<"These are mathmarks "<<endl;
    cout<<mathmarks[0] <<endl;
    cout<<mathmarks[1] <<endl;
    cout<<mathmarks[2] <<endl;
    cout<<mathmarks[3] <<endl;

cout<<"These are marks "<<endl;
    cout<<marks[0]<<endl;
    cout<<marks[1]<<endl;

    // you can change the value of an array
    marks[2]=76;
    cout<<marks[2]<<endl;
    cout<<marks[3]<<endl;


    // Printing the marks using for loop***********************
    for (int i = 0; i < 4; i++)
    {
        /* code */
        cout<<"The value ofmarks "<<i<<" is "<<marks[i]<<endl;
    }

    // using while loop*************
    int i=0;
    while (i<4)
    {
        /* code */
        cout<<"The value of marks "<<i<<" is "<<marks[i]<<endl;
        i++;
    }
    
    // pointers and arrays*******************
    int* p =marks;
    cout<<*(p++)<<endl;
    cout<<*(++p)<<endl;
    
    // cout<<"The value of marks[0] or *(p+1)  "<<*p<<endl;
    // cout<<"The value of marks[1] or *(p+1) "<<*(p+1)<<endl;
    // cout<<"The value of marks[2] or *(p+1) "<<*(p+2)<<endl;
    // cout<<"The value of marks[3] or *(p+1) "<<*(p+3)<<endl;
    

    return 0;
}
