#include<iostream>
using namespace std;

int sum(int a , int b){
    cout<<"Using function of 2 arguments."<<endl;
    return a+b ;
}

int sum(int a , int b, int c){
    cout<<"Using function of 3 arguments."<<endl;
    return a+b+c ;
}

// calculate the volume of cylinder***
int vol(double r, int h){
return(3.14*r*r*h);
}

// calculate volume of a cube***
int vol(int a){
return (a*a*a);
}

// rectangular box***
int vol(int l, int b, int h){
    return (l*b*h);
}

int main(){
    cout<<"The sum of 3 and 6 is "<<sum(3,6)<<endl;
    cout<<"The sum of 3 , 7 and 6 is "<<sum(3,7,6)<<endl;
    cout<<"The volume of cuboid of 3,7 and 6 is "<<vol(3,7,6)<<endl;
    cout<<"The volume of cylinder of radius 3 and height 6 is "<<vol(3,6)<<endl;
    cout<<"The volume of side 3 is "<<vol(3)<<endl;
    




    return 0;
}
